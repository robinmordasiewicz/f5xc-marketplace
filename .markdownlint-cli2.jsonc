{
  // markdownlint-cli2 configuration
  // Lints ALL markdown files including generated ones in docs/plugins/
  "config": {
    "extends": ".markdownlint.json"
  },
  "globs": [
    "**/*.md"
  ],
  "ignores": [
    // Build output directories only - NOT source docs
    "site/**",
    ".venv/**",
    "venv/**",
    "node_modules/**",
    // Plugin submodules have their own quality standards
    "plugins/**"
  ],
  // Auto-fix issues where possible
  "fix": true
}
